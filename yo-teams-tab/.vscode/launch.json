{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to server",
            "type": "pwa-node",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Launch client (Edge)",
            "type": "pwa-msedge",
            "request": "launch",
            "url": "https://teams.microsoft.com/",
            "outFiles": [
                "${workspaceFolder}/dist/web/**/*.js",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Launch client (Chrome)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "https://teams.microsoft.com/",
            "outFiles": [
                "${workspaceFolder}/dist/web/**/*.js",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Sideload in Teams (Chrome)",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "https://teams.microsoft.com/l/app/ca1990f0-17c6-11ed-ae1f-17e65e2e6feb?installAppPackage=true&webjoin=true",
            "outFiles": [
                "${workspaceFolder}/dist/web/**/*.js",
                "!**/node_modules/**"
            ],
            "presentation": {
                "group": "_teamsfx",
                "order": 1
            },
            // "preLaunchTask": "Launch and Upload Teams App"
        },
    ],
    "compounds": [
        {
            "name": "Debug (Edge)",
            "configurations": [
                "Attach to server",
                "Launch client (Edge)"
            ],
            "presentation": {
                "group": "all",
                "order": 1
            },
            "stopAll": true
        },
        {
            "name": "Debug (Chrome)",
            "configurations": [
                "Attach to server",
                "Launch client (Chrome)"
            ],
            "presentation": {
                "group": "all",
                "order": 2
            },
            "stopAll": true
        }
    ]
}