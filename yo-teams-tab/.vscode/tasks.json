{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch and Upload Teams App",
            "dependsOn": [
                "Launch Local Server",
                "Upload App Manifest",
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Launch Local Server",
            "type": "shell",
            "command": "npm run teamsfx:debug",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Server running on"
                }
            }
        },
        {
            "label": "Upload App Manifest",
            "type": "shell",
            "command": "npm run teamsfx:upload-manifest",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}