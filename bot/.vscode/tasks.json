{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Teams App Locally",
            "dependsOn": [
                "Validate & Install prerequisites",
                "Install NPM packages",
                "Start local tunnel",
                "Register bot",
                "Build & Upload Teams manifest",
                "Start bot"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Validate & Install prerequisites",
            "type": "shell",
            "command": "teamsfx check-prerequisites --nodejs --m365Account --ngrok --ports 3978 9239",
        },
        {
            "label": "Install NPM packages",
            "type": "shell",
            "command": "cd bot; npm install",
            "options": {
                "cwd": "${workspaceFolder}",
            }
        },
        {
            "label": "Start local tunnel",
            "type": "shell",
            "command": "teamfx start-local-tunnel --configFile .fx/configs/ngrok.yaml", // --binFolder xxx
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}",
            },
            "problemMatcher": "$teamsfx-local-tunnel-watch"
        },
        {
            "label": "Register bot",
            "type": "shell",
            "command": "teamsfx register-bot", // --botId xxx --botPassword xxx --messaging-endpoint xxx, 
                                               // Output: envOutput: bot/.env.teamsfx.local; stateOutput: .fx/states/state.local.json
        },
        {
            "label": "Build & Upload Teams manifest",
            "type": "shell",
            "command": "teamsfx register-app --manifestTemplateFile templates/appPackage/manifest.template.json --configFile .fx/configs/config.local.json --stateFile .fx/states/state.local.json", // --manifestAppPackage xxx
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start bot",
            "type": "shell",
            "command": "npm run dev:teamsfx",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/bot"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "[nodemon] starting",
                    "endsPattern": "restify listening to|Bot/ME service listening at|[nodemon] app crashed"
                }
            }
        }
    ]
}