    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Teams App Locally",
            "dependsOn": [
                "Validate & Install prerequisites",
                "Install NPM packages",
                "Prepare Teams App dependencies",
                "Build & Upload Teams manifest",
                "Start services"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Validate & Install prerequisites",
            "type": "shell",
            "command": "exit ${input:validate-and-install-prerequisites}",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Install NPM packages",
            "type": "shell",
            "command": "exit ${input:install-npm-packages}",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Prepare Teams App dependencies",
            "type": "shell",
            "command": "exit ${input:prepare-teams-app-dependencies}",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Build & Upload teams manifest",
            "type": "shell",
            "command": "exit ${input:build-and-upload-teams-manifest}",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Start local services",
            "dependsOn": [
                "Start frontend"
            ]
        },
        {
            "label": "Start frontend",
            "type": "shell",
            "command": "npm run dev:teamsfx",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/tabs"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Compiled|Failed"
                },
            }
        }
    ],
    "inputs": [
        {
            "id": "validate-and-install-prerequisites",
            "type": "command",
            "command": "fx-extension.check-prerequisites",
            "args": {
                "prerequisites": [
                    "nodejs", // Validate Node.js
                    "m365Account", // Validate M365 account
                    "devCert", // Install localhost SSL certificate
                    "ports" // Validate available ports
                ],
                "ports": [
                    53000 // tab service port
                ]
            }
        },
        {
            "id": "install-npm-packages",
            "type": "command",
            "command": "fx-extension.npm-install",
            "args": {
                "tab": {
                    "npmInstallArgs": "--no-audit",
                    "cwd": "${teamsfx:workspaceFolder}/tab",
                    "forceUpdate": false
                }
            }
        },
        {
            "id": "prepare-teams-app-dependencies",
            "type": "command",
            "command": "fx-extension.prepare-app-dependencies",
            "args": {
                "enabledSteps": [
                    "registerSSOAAD", // Register AAD app for SSO
                    "generateEnv", // Generate environment variables for local services
                ],
                "appConfigs": {
                    "tabBaseUrl": "https://localhost:53000",
                    "aadObjectId": "${auto}",
                    "aadClientId": "${auto}",
                    "aadClientSecret": "${auto}"
                }
            }
        },
        {
            "id": "build-and-upload-teams-manifest",
            "type": "command",
            "command": "fx-extension.prepare-manifest",
            "args": {
                "manifesPackagePath": "${auto}"
            }
        }
    ]
}