{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Teams App Locally",
            "dependsOn": [
                "Validate & Install prerequisites",
                "Install NPM packages",
                "Register SSO AAD",
                "Build & Upload Teams manifest",
                "Start frontend"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Validate & Install prerequisites",
            "type": "shell",
            "command": "teamsfx validate-prerequisites --nodejs --m365Account --devCert --ports 53000",
        },
        {
            "label": "Install NPM packages",
            "type": "shell",
            "command": "cd tabs; npm install",
            "options": {
                "cwd": "${workspaceFolder}",
            }
        },
        {
            "label": "Register SSO AAD",
            "type": "shell",
            "command": "teamsfx register-sso-aad --manifestTemplateFile templates/appPackage/aad.template.json --configFile .fx/configs/config.local.json --stateFile .fx/states/state.local.json", // --manifestFile xxx
        },
        {
            "label": "Build & Upload Teams manifest",
            "type": "shell",
            "command": "teamsfx register-app --manifestTemplateFile templates/appPackage/manifest.template.json --configFile .fx/configs/config.local.json --stateFile .fx/states/state.local.json", // --manifestAppPackage xxx
        },
        {
            "label": "Start frontend",
            "type": "shell",
            "command": "npm run dev:teamsfx",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/tabs"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Compiled|Failed"
                },
            }
        }
    ]
}