{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Teams App Locally",
            "dependsOn": [
                "Validate & Install prerequisites",
                "Install NPM packages",
                "Register SSO AAD",
                "Build & Upload Teams manifest",
                "Start frontend"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Validate & Install prerequisites",
            "type": "shell",
            "command": "teamsfx validate-prerequisites --nodejs --m365Account --devCert --ports 53000",
        },
        {
            "label": "Install NPM packages",
            "type": "shell",
            "command": "teamsfx npm-install",
            "args": [
                "--project tab",
                "--install-args '--no-audit'"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
            }
        },
        {
            "label": "Register SSO AAD",
            "type": "shell",
            "command": "teamsfx register-sso-aad",
            "args": [
                "--tabBaseUrl https://localhost:53000",
                // "--aadObjectId xxx",
                // "--aadClientId xxx",
                // "--aadClientSecret xxx",
            ]
            // Output: envOutput: bot/.env.teamsfx.local; stateOutput: .fx/states/state.local.json
        },
        {
            "label": "Build & Upload Teams manifest",
            "type": "shell",
            "command": "teamsfx register-teams-app",
            "args": [
                // "--manifestPackagePath xxx"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start frontend",
            "type": "shell",
            "command": "npm run dev:teamsfx",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/tabs"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 0,
                    "location": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "Compiled|Failed"
                },
            }
        }
    ]
}